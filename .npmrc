# npm configuration for consistent builds
legacy-peer-deps=true
engine-strict=true
save-exact=true
fund=false
audit=false
update-notifier=false
progress=true

# Performance optimizations
prefer-offline=true
cache-min=3600

# Ensure consistent package resolution
lockfile-version=3
package-lock=true

# Timeout settings for slow networks
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Logging
loglevel=warn 