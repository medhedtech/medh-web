# NPM Performance Optimization Configuration
# This configuration dramatically improves npm speed and reduces network overhead

# Enable aggressive caching for faster installs
prefer-offline=true
prefer-online=false

# Use npm registry with better performance
registry=https://registry.npmjs.org/

# Enable parallel downloads for faster package fetching
maxsockets=50
fetch-retries=5
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Optimize package resolution
prefer-offline=true
prefer-dedupe=true

# Enable audit and security optimizations
audit-level=moderate
fund=false

# Reduce log verbosity for cleaner output
loglevel=warn

# Enable legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Optimize for CI/production environments
progress=false
timing=true

# Enable package-lock optimizations
package-lock=true
package-lock-only=false

# Network optimizations
network-timeout=300000

# Enable better compression
save-exact=false
save-prefix=^

# Optimize node_modules structure
install-strategy=hoisted

# Additional performance optimizations
engine-strict=false

# Enable parallel processing
jobs=max

# Disable unnecessary features for speed
update-notifier=false
metrics-registry=false

# Omit optional dependencies for faster installs
omit=optional 