    "components": {
      "dashboard": {
        "layouts": {
          "sidebarLayout": {
            "container": "min-h-screen bg-slate-50 dark:bg-slate-950",
            "sidebar": "fixed inset-y-0 left-0 z-50 w-64 bg-white dark:bg-slate-900 border-r border-slate-200 dark:border-slate-800",
            "main": "pl-64 flex flex-col min-h-screen",
            "content": "flex-1 p-6 lg:p-8"
          },
          "gridLayout": {
            "container": "max-w-7xl mx-auto p-6 lg:p-8",
            "grid": "grid grid-cols-1 lg:grid-cols-3 gap-8",
            "leftColumn": "lg:col-span-2 space-y-8",
            "rightColumn": "space-y-8"
          }
        },
        
        "cards": {
          "statCard": {
            "base": "bg-white dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700 hover:shadow-lg transition-all duration-300",
            "glass": "backdrop-blur-xl bg-white/10 dark:bg-slate-800/10 border border-white/20 dark:border-slate-700/20 rounded-xl p-6 hover:bg-white/15 dark:hover:bg-slate-800/15 transition-all duration-300",
            "gradient": "bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-xl p-6 shadow-lg"
          },
          "demoCard": {
            "base": "bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300",
            "upcoming": "border-l-4 border-l-blue-500",
            "live": "border-l-4 border-l-red-500 animate-pulse",
            "completed": "border-l-4 border-l-green-500",
            "recorded": "border-l-4 border-l-purple-500"
          },
          "courseCard": {
            "base": "bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-600 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200",
            "featured": "ring-2 ring-blue-500 ring-offset-2 ring-offset-slate-50 dark:ring-offset-slate-900",
            "glass": "backdrop-blur-xl bg-white/10 dark:bg-slate-800/10 border border-white/20 dark:border-slate-700/20 rounded-xl hover:bg-white/15 dark:hover:bg-slate-800/15 transition-all duration-300"
          }
        },

        "tabs": {
          "container": "flex bg-gray-100 dark:bg-gray-800 rounded-lg p-1 overflow-x-auto scrollbar-hide max-w-full",
          "tabList": "flex space-x-1 min-w-max",
          "tab": {
            "base": "relative inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg transition-all duration-300 overflow-hidden group min-w-0",
            "active": "bg-gradient-to-r from-emerald-500 to-emerald-600 text-white shadow-md hover:shadow-lg",
            "inactive": "glass-stats text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-white/20 dark:hover:bg-gray-700/20"
          },
          "content": "mt-6"
        },

        "forms": {
          "progressForm": {
            "container": "max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8",
            "formColumn": "lg:col-span-2 bg-white dark:bg-gray-800 rounded-2xl p-8 border border-gray-200 dark:border-gray-700",
            "benefitsColumn": "bg-white dark:bg-gray-800 rounded-2xl p-8 border border-gray-200 dark:border-gray-700",
            "progressIndicator": "flex items-center justify-center mb-8",
            "step": {
              "base": "w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium transition-all",
              "active": "bg-green-500 text-white",
              "inactive": "bg-gray-200 dark:bg-gray-700 text-gray-500",
              "connector": "w-12 h-0.5 mx-2 transition-all"
            }
          },
          "cardSelection": {
            "grid": "grid grid-cols-1 md:grid-cols-2 gap-3",
            "card": {
              "base": "p-4 border-2 rounded-xl cursor-pointer transition-all hover:scale-105",
              "selected": "border-green-500 bg-green-50 dark:bg-green-900/20",
              "unselected": "border-gray-200 dark:border-gray-700 hover:border-green-300"
            }
          },
          "buttonGroup": {
            "grid": "grid grid-cols-2 md:grid-cols-4 gap-3",
            "button": {
              "base": "p-3 border-2 rounded-xl transition-all hover:scale-105",
              "selected": "border-green-500 bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-300",
              "unselected": "border-gray-200 dark:border-gray-700 hover:border-green-300"
            }
          }
        },

        "modals": {
          "backdrop": "fixed inset-0 bg-black/50 backdrop-blur-sm flex justify-center items-center p-4 z-50",
          "container": {
            "base": "bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-xl max-w-md w-full relative",
            "large": "bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-xl max-w-4xl w-full relative max-h-[90vh] overflow-auto",
            "glass": "backdrop-blur-xl bg-white/10 dark:bg-gray-800/10 border border-white/20 dark:border-gray-700/20 p-6 rounded-2xl shadow-xl max-w-md w-full relative"
          },
          "closeButton": "absolute top-4 right-4 p-1 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors",
          "header": "mb-6",
          "footer": "flex space-x-3 pt-4"
        },

        "notifications": {
          "toast": {
            "base": "fixed top-4 right-4 z-50 max-w-sm w-full bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg shadow-lg p-4",
            "success": "border-l-4 border-l-green-500",
            "error": "border-l-4 border-l-red-500",
            "warning": "border-l-4 border-l-yellow-500",
            "info": "border-l-4 border-l-blue-500"
          },
          "banner": {
            "base": "bg-gradient-to-r p-4 text-white rounded-lg mb-6",
            "success": "from-green-500 to-emerald-600",
            "error": "from-red-500 to-pink-600",
            "warning": "from-yellow-500 to-orange-600",
            "info": "from-blue-500 to-indigo-600"
          }
        },

        "statusIndicators": {
          "badge": {
            "base": "px-2 py-1 text-xs rounded-full font-medium",
            "success": "bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300",
            "warning": "bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300",
            "error": "bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300",
            "info": "bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300",
            "neutral": "bg-gray-100 dark:bg-gray-900/30 text-gray-700 dark:text-gray-300"
          },
          "dot": {
            "base": "inline-block w-2 h-2 rounded-full mr-1",
            "success": "bg-green-500",
            "warning": "bg-yellow-500",
            "error": "bg-red-500 animate-pulse",
            "info": "bg-blue-500",
            "neutral": "bg-gray-500"
          }
        },

        "buttons": {
          "primary": "bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-medium disabled:opacity-50 disabled:cursor-not-allowed transition-colors",
          "secondary": "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors",
          "ghost": "text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors",
          "glass": "backdrop-blur-md bg-white/10 border-white/20 hover:bg-white/15 text-slate-800 dark:text-white rounded-lg font-medium transition-all duration-300",
          "floating": "fixed bottom-6 right-6 bg-emerald-600 hover:bg-emerald-700 text-white rounded-full p-4 shadow-lg hover:shadow-xl transition-all duration-300 z-40"
        },

        "inputs": {
          "standard": "w-full p-4 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-green-500 focus:border-transparent",
          "search": "w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500/20 transition-all duration-200",
          "select": "w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-green-500 focus:border-transparent appearance-none pr-10",
          "textarea": "w-full p-4 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none"
        }
      },

      "animations": {
        "keyframes": {
          "fadeIn": {
            "0%": { "opacity": "0" },
            "100%": { "opacity": "1" }
          },
          "slideUp": {
            "0%": { "transform": "translateY(10px)", "opacity": "0" },
            "100%": { "transform": "translateY(0)", "opacity": "1" }
          },
          "slideDown": {
            "0%": { "transform": "translateY(-10px)", "opacity": "0" },
            "100%": { "transform": "translateY(0)", "opacity": "1" }
          },
          "scaleIn": {
            "0%": { "transform": "scale(0.95)", "opacity": "0" },
            "100%": { "transform": "scale(1)", "opacity": "1" }
          },
          "shimmer": {
            "0%": { "backgroundPosition": "-200% 0" },
            "100%": { "backgroundPosition": "200% 0" }
          },
          "blob": {
            "0%": { "transform": "translate(0px, 0px) scale(1)" },
            "33%": { "transform": "translate(30px, -50px) scale(1.1)" },
            "66%": { "transform": "translate(-20px, 20px) scale(0.9)" },
            "100%": { "transform": "translate(0px, 0px) scale(1)" }
          },
          "gradientX": {
            "0%, 100%": { "backgroundPosition": "0% 50%" },
            "50%": { "backgroundPosition": "100% 50%" }
          }
        },
        "durations": {
          "fast": "150ms",
          "normal": "200ms",
          "slow": "300ms",
          "slower": "500ms"
        },
        "easings": {
          "default": "cubic-bezier(0.4, 0, 0.2, 1)",
          "in": "cubic-bezier(0.4, 0, 1, 1)",
          "out": "cubic-bezier(0, 0, 0.2, 1)",
          "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
        }
      },

      "utilities": {
        "glass": {
          "primary": "backdrop-blur-xl bg-white/10 dark:bg-slate-800/10 border border-white/20 dark:border-slate-700/20",
          "secondary": "backdrop-blur-md bg-white/5 dark:bg-slate-800/5 border border-white/10 dark:border-slate-700/10",
          "card": "backdrop-blur-xl bg-white/10 dark:bg-slate-800/10 border border-white/20 dark:border-slate-700/20 rounded-xl",
          "button": "backdrop-blur-md bg-white/10 border-white/20 hover:bg-white/15",
          "stats": "backdrop-blur-sm bg-white/5 dark:bg-gray-800/5 border border-white/10 dark:border-gray-700/10"
        },
        
        "responsive": {
          "hide": {
            "mobile": "hidden sm:block",
            "tablet": "hidden md:block",
            "desktop": "hidden lg:block"
          },
          "show": {
            "mobile": "block sm:hidden",
            "tablet": "block md:hidden",
            "desktop": "block lg:hidden"
          },
          "text": {
            "mobile": "text-sm sm:text-base",
            "heading": "text-xl sm:text-2xl md:text-3xl lg:text-4xl",
            "fluid": "text-[clamp(0.875rem,2.5vw+0.5rem,1.125rem)]"
          },
          "spacing": {
            "mobile": "p-4 sm:p-6 md:p-8",
            "section": "py-8 sm:py-12 md:py-16 lg:py-20",
            "container": "px-4 sm:px-6 md:px-8 lg:px-12"
          },
          "grid": {
            "mobile": "grid-cols-1 sm:grid-cols-2",
            "tablet": "grid-cols-1 sm:grid-cols-2 md:grid-cols-3",
            "desktop": "grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
          }
        },

        "focus": {
          "ring": "focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2",
          "visible": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500",
          "within": "focus-within:ring-2 focus-within:ring-blue-500 focus-within:ring-offset-2"
        },

        "hover": {
          "lift": "hover:-translate-y-1 hover:shadow-lg transition-all duration-200",
