# PNPM Performance Configuration
# Optimized for speed and efficiency

# Use symlinks for better performance
symlink=true

# Enable hoisting for compatibility
hoist-pattern[]=*

# Optimize peer dependency handling
auto-install-peers=true
dedupe-peer-dependents=true

# Enable strict peer dependencies
strict-peer-dependencies=false

# Network optimizations
network-concurrency=16
child-concurrency=5

# Registry configuration
registry=https://registry.npmjs.org/

# Store configuration for better caching
store-dir=~/.pnpm-store

# Enable side effects cache
side-effects-cache=true
side-effects-cache-readonly=false

# Optimize resolution
resolution-mode=highest

# Enable progress reporting
reporter=default

# Disable telemetry for privacy and speed
telemetry=false

# Enable legacy SSL support if needed
strict-ssl=true

# Optimize lockfile
lockfile=true
prefer-frozen-lockfile=false

# Enable shamefully-hoist for compatibility with problematic packages
shamefully-hoist=false

# Optimize package extraction
package-import-method=auto 