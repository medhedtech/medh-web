# Production Environment Configuration for AWS Amplify
# Copy this file to .env.production and fill in your actual values
# OR set these as Environment Variables in AWS Amplify Console

# Essential Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.medh.co/api/v1

# Database
MONGO_URI=your_mongodb_connection_string_here

# Authentication & Security
JWT_SECRET=your_secure_jwt_secret_minimum_32_characters
API_KEY_SALT=your_api_key_salt_here
API_KEY_HASH=your_api_key_hash_here
SESSION_SECRET=your_session_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Third-party Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Optional: Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here

# Optional: Zoom Integration
NEXT_PUBLIC_ZOOM_ACCOUNT_ID=your_zoom_account_id
NEXT_PUBLIC_ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Security Headers
CORS_ALLOWED_ORIGINS=https://medh.co,https://www.medh.co

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Content Security
SANITIZE_HTML=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true 