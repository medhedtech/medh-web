# API Configuration
NEXT_PUBLIC_API_URL=https://api.medh.co/api/v1
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY_SALT=your-api-key-salt-here
API_KEY_HASH=your-api-key-hash-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Headers
CORS_ALLOWED_ORIGINS=https://medh.co,https://www.medh.co
CSP_REPORT_URI=https://report-uri.medh.co/csp-reports

# Authentication
AUTH_COOKIE_NAME=medh_auth
AUTH_COOKIE_DOMAIN=.medh.co
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Third-party Services
GOOGLE_ANALYTICS_ID=your-ga-id-here
SENTRY_DSN=your-sentry-dsn-here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# SSL/TLS
SSL_KEY_PATH=/path/to/ssl/key
SSL_CERT_PATH=/path/to/ssl/cert

# Monitoring
LOG_LEVEL=info
ERROR_LOGGING_SERVICE=sentry  # or any other service

# Content Security
SANITIZE_HTML=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# Development
NODE_ENV=production

# Zoom API Credentials
NEXT_PUBLIC_ZOOM_ACCOUNT_ID=your_zoom_account_id
NEXT_PUBLIC_ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_SECRET_TOKEN=your_zoom_secret_token
ZOOM_VERIFICATION_TOKEN=your_zoom_verification_token

# Database Configuration
DATABASE_URL="your_database_connection_string"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"

# AI Content Generation with Web Search
# =====================================
# OpenAI GPT-4o has built-in web search capabilities
# No additional search API keys required!

# Additional AI Services (Optional)
# =================================

# Anthropic Claude (Alternative to OpenAI)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Google Gemini API (For real-time search capabilities)
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# xAI Grok API (For real-time web search)
XAI_API_KEY="your-xai-api-key"

# Application Configuration
# ========================

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# API Configuration
API_BASE_URL="http://localhost:3000/api"

# Content Generation Settings
# ===========================

# Default search settings
DEFAULT_SEARCH_DEPTH="advanced"
DEFAULT_MAX_SEARCH_RESULTS="10"
DEFAULT_SEARCH_CONTEXT_SIZE="high"

# Content enhancement settings
DEFAULT_TARGET_WORD_COUNT="1500"
ENABLE_REAL_TIME_SEARCH="true"
ENABLE_FACT_CHECKING="true"

# Rate Limiting and Caching
# =========================

# API rate limits (requests per minute)
OPENAI_RATE_LIMIT="60"
TAVILY_RATE_LIMIT="100"
GOOGLE_SEARCH_RATE_LIMIT="100"

# Cache settings (in seconds)
SEARCH_CACHE_TTL="3600"
CONTENT_CACHE_TTL="1800"

# Security and Monitoring
# =======================

# API security
API_SECRET_KEY="your-api-secret-key"
WEBHOOK_SECRET="your-webhook-secret"

# Monitoring and logging
LOG_LEVEL="info"
ENABLE_API_LOGGING="true"
ENABLE_SEARCH_ANALYTICS="true"

# Optional: External Services
# ===========================

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# MongoDB (if using MongoDB)
MONGODB_URI="mongodb://localhost:27017/your-database"

# PostgreSQL (if using PostgreSQL)
POSTGRES_URL="postgresql://user:password@localhost:5432/database"

# Email service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File storage (for images, documents)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Analytics and tracking
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Social media APIs (for content distribution)
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret" 