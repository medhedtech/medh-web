# API Configuration
NEXT_PUBLIC_API_URL=https://api.medh.co/api/v1
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY_SALT=your-api-key-salt-here
API_KEY_HASH=your-api-key-hash-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Headers
CORS_ALLOWED_ORIGINS=https://medh.co,https://www.medh.co
CSP_REPORT_URI=https://report-uri.medh.co/csp-reports

# Authentication
AUTH_COOKIE_NAME=medh_auth
AUTH_COOKIE_DOMAIN=.medh.co
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Third-party Services
GOOGLE_ANALYTICS_ID=your-ga-id-here
SENTRY_DSN=your-sentry-dsn-here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# SSL/TLS
SSL_KEY_PATH=/path/to/ssl/key
SSL_CERT_PATH=/path/to/ssl/cert

# Monitoring
LOG_LEVEL=info
ERROR_LOGGING_SERVICE=sentry  # or any other service

# Content Security
SANITIZE_HTML=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# Development
NODE_ENV=production

# Zoom API Credentials
NEXT_PUBLIC_ZOOM_ACCOUNT_ID=your_zoom_account_id
NEXT_PUBLIC_ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_SECRET_TOKEN=your_zoom_secret_token
ZOOM_VERIFICATION_TOKEN=your_zoom_verification_token 