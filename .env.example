# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Security
JWT_SECRET=your-jwt-secret-key-here
API_KEY_SALT=your-api-key-salt-here
API_KEY_HASH=your-api-key-hash-here
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Headers
CORS_ALLOWED_ORIGINS=https://medh.co,https://www.medh.co
CSP_REPORT_URI=https://your-reporting-endpoint.com/csp-reports

# Authentication
AUTH_COOKIE_NAME=medh_auth
AUTH_COOKIE_DOMAIN=.medh.co
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Third-party Services
GOOGLE_ANALYTICS_ID=your-ga-id
SENTRY_DSN=your-sentry-dsn

# SSL/TLS
SSL_KEY_PATH=/path/to/ssl/key
SSL_CERT_PATH=/path/to/ssl/cert

# Monitoring
LOG_LEVEL=info
ERROR_LOGGING_SERVICE=sentry  # or any other service

# Content Security
SANITIZE_HTML=true
ENABLE_XSS_PROTECTION=true
ENABLE_CSRF_PROTECTION=true

# Development
NODE_ENV=development  # change to production for production environment 